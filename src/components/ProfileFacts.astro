---
// config import
import Certifications from '@/data/certifications.ts'
// import Icon from 'astro-icon/components';
import { Icon } from 'astro-icon/components';

// const { contact } = contact
---

<div class="flex flex-wrap justify-center gap-8">
    {Certifications.map((certifications) => (
        <div class="flex flex-col items-center gap-3 w-24 text-center">
            <a 
                href={certifications.url} 
                target="_blank"
                rel="noopener noreferrer"
                class="flex flex-col items-center w-full hover:opacity-75 transition-opacity"
            >
                <Icon 
                    name={certifications.icon} 
                    class="w-12 h-12 text-[#0078D4] hover:scale-110 transition-transform" 
                    aria-label={certifications.name}
                />
                <span class="text-sm font-medium text-n700 dark:text-n200">
                    {certifications.name}
                </span>
            </a>
        </div>
    ))}
</div>